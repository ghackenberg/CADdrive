{
    "name": "fhooe-audit-platform",
    "version": "1.0.0",
    "description": "TODO",
    "private": "true",
    "author": {
        "name": "Georg Hackenberg",
        "email": "georg.hackenberg@fh-wels.at"
    },
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:georg-hackenberg/fhooe/audit-platform.git"
    },
    "workspaces": [
        "backend",
        "broker",
        "common",
        "frontend",
        "gateway",
        "worker"
    ],
    "scripts": {
        "clean": "workspaces-run --only=\"fhooe-audit-platform-{frontend,worker}\" -- npm run clean",
        "build": "workspaces-run --only=\"fhooe-audit-platform-{frontend,worker}\" -- npm run build",
        "start": "workspaces-run --parallel --ignore=\"fhooe-audit-platform-common\" -- npm run start",
        "devel": "workspaces-run --parallel --ignore=\"fhooe-audit-platform-common\" -- npm run devel"
    },
    "dependencies": {
        "workspaces-run": "^1.0.1"
    }
}
