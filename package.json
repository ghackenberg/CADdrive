{
    "name": "productboard",
    "version": "0.0.1",
    "description": "Web platform for collaborative product design",
    "license": "MIT",
    "private": "true",
    "author": {
        "name": "Georg Hackenberg",
        "email": "georg.hackenberg@fh-wels.at"
    },
    "contributors": [
        {
            "name": "Georg Hackenberg",
            "email": "georg.hackenberg@fh-wels.at"
        },
        {
            "name": "Christian Zehetner",
            "email": "christian.zehetner@fh-wels.at"
        },
        {
            "name": "Jürgen Humenberger",
            "email": "juergen.humenberger@fh-wels.at"
        },
        {
            "name": "Dominik Frühwirth",
            "email": "dominik.fruehwirth@fh-wels.at"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ghackenberg/productboard.git"
    },
    "workspaces": [
        "packages/common",
        "packages/database",
        "packages/broker",
        "packages/backend",
        "packages/frontend",
        "packages/gateway",
        "packages/toolkit"
    ],
    "scripts": {
        "clean": "workspaces-run -- npm run clean",
        "build": "workspaces-run --ignore=\"productboard-{gateway}\" -- npm run build",
        "start": "workspaces-run --parallel --ignore=\"productboard-{common,database,toolkit}\" -- npm run start",
        "devel": "workspaces-run --parallel --ignore=\"productboard-{common,database,toolkit}\" -- npm run devel",
        "toolkit-start": "workspaces-run --only=\"productboard-toolkit\" -- npm run start",
        "toolkit-devel": "workspaces-run --only=\"productboard-toolkit\" -- npm run devel",
        "lint": "workspaces-run -- npm run lint",
        "loc": "workspaces-run -- npm run loc"
    },
    "dependencies": {
        "@nestjs/common": "^8.1.2",
        "@nestjs/core": "^8.1.2",
        "@nestjs/swagger": "^5.1.4",
        "@types/express": "^4.17.13",
        "@types/node": "^16.18.37",
        "@types/three": "^0.150.2",
        "axios": "^0.26.1",
        "jose": "^4.14.1",
        "mqtt": "^4.3.7",
        "reflect-metadata": "^0.1.13",
        "three": "^0.151.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3",
        "workspaces-run": "^1.0.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.44.0",
        "@typescript-eslint/parser": "^5.44.0",
        "eslint": "^8.28.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-regex": "^1.10.0",
        "nodemon": "^2.0.22",
        "sloc": "^0.2.1"
    },
    "engines": {
        "node": "^16",
        "npm": "^9"
    }
}
